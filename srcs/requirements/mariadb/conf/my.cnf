[mysqld]
user                    = mysql
pid-file                = /run/mysqld/mysqld.pid
socket                  = /run/mysqld/mysqld.sock
datadir                 = /var/lib/mysql

# Allow other containers (wordpress) to connect on the docker network
bind-address            = 0.0.0.0
port                    = 3306

# Good defaults for container use
skip-name-resolve